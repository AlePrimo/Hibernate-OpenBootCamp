<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.org/dtd/hibernate-configuration">

<hibernate-configuration>
    <session-factory>

        <!-- Configuraci贸n de conexi贸n a la base de datos -->
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/curso_hibernate_json</property>
        <property name="hibernate.connection.username">${USERMYSQL}</property>
        <property name="hibernate.connection.password">${PASSMYSQL}</property>
        <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="show_sql">true</property>
        <property name="format_sql">true</property>
        <property name="current_session_context_class">thread</property>

        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>

        <!-- Configuraci贸n de Creacion/Actualizacion/borrado de Tablas  -->

        <property name="hibernate.hbm2ddl.auto">create</property>

        <!-- Configuraci贸n de importacion de archivos SQL para poblar la base de datos
        <property name="hibernate.hbm2ddl.import_files">archivo1.sql,archivo2.sql</property>
        AL CONFIGURAR ESTA PROPIEDAD SE PODRAN AGREGAR ARCHIVOS SQL QUE CONTENGAN DATOS PARA LA BASE-->

        <!-- Configuration de Entidades -->

        <mapping class="com.example.entities.Employee"/>




    </session-factory>
</hibernate-configuration>


